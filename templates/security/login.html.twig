<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>
        {% block title %}Log in!{% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.metroui.org.ua/v4/css/metro-all.min.css">
        <link rel="stylesheet" href="{{ asset('css/login.css') }}">

    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body >

{% block body %}


            <form  method="POST"  >
                <div class="container ">
                    <fieldset class="mt-15 cell-5 shadowed offset-4">
                        <legend class="cell-4 offset-1"> <h1>Login</h1></legend>
                        <div class="cell-9 offset-3">
                            <div class="row mb-2">
                                <label for="inputPseudo" class="cell-4"> <strong>Identifiant :</strong></label>
                                <input type="text"  name="pseudo" id="inputPseudo" class="form-control" autocomplete="username" required >
                            </div>
                            <div class="row mb-2">
                                <label for="inputPassword" class="cell-4"> <strong>Mot de passe :</strong></label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required >
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="row  mt-10 mb-10">
                                <div class="cell-5 ">
                                    <button type="submit" class="button large" style="height: 60px"><strong>Connexion</strong></button>
                                </div>

                                <div class="cell-6">
                                    <div>
                                        <input type="checkbox" data-role="checkbox" data-style="2"><strong>Se souvenir de moi</strong>
                                    </div>
                                    <div class=" mt-2 ">
                                        <a href="#" class=" ml-5" ><strong>Mot de passe oublié</strong></a>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </fieldset>
                </div>


            </form>

{% endblock %}

</body>
</html>

